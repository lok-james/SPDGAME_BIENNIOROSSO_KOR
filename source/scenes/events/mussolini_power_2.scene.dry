    Q.anti_acerbo_coalition += parseFloat(Q.ldr_seating_disp);
    Q.ldr_convinced = 1;
}
if (Q.ldr_leader == "Orlando" && Q.ldr_relation > 75) {
    Q.anti_acerbo_coalition += parseFloat(Q.ldr_seating_disp);
    Q.ldr_convinced = 1;
}
!}
go-to: acerbo_menu
