unavailable-subtitle: [? if ds_leader != "Carnazza" : [+ ds_name +]와의 관계가 너무 좋지 않습니다. ?][? if ds_leader == "Carnazza" : [+ ds_name +]는 결코 우리와 공동 명단을 작성하지 않을 것입니다. ?]
on-arrival: anti_fas_ds = 1
